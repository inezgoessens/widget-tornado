  <title>Monthly LOTR img</title>
  <style>
    /* Reset and widget container styling */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html, body {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }
    
    .calendar-widget {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      overflow: hidden;
    }

    /* Stack all month images in the same place */
    .calendar-widget .month {
      position: absolute;
      inset: 0;                  /* top/right/bottom/left: 0 */
      display: none;             /* hidden by default */
      align-items: center;
      justify-content: center;
    }

    /* Show only the active month */
    .calendar-widget .month.active {
      display: flex;
    }

    /* Make images fill the entire container */
    .calendar-widget .month img {
      width: 100%;
      height: 100%;
      object-fit: cover;         /* fills the space, may crop if aspect ratios don't match */
    }

    /* Fallback note if JS is disabled */
    .no-js-note {
      text-align: center;
      font: 14px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      color: #666;
      margin-top: 0.5rem;
    }

    /* Hide the note once JS runs */
    .js-enabled .no-js-note { display: none; }
  </style>
</head>
<body>
  <!-- Calendar widget -->
  <div id="calendarWidget" class="calendar-widget" aria-label="LOTR img for current month">
